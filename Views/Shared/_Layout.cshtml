<body>
    <!--/Header-->
    <header class="fixed-top">
        <div class="container">
            <nav class="navbar navbar-expand-lg navbar-light stroke py-lg-0">
                <!-- Logo y botón hamburguesa -->
                <h1 class="navbar-brand-container">
                    <a class="navbar-brand pe-xl-5 pe-lg-4" href="index.html">
                        Grupo<span class="sublog">ABASA</span>
                    </a>
                </h1>

                <!-- Botón hamburguesa solo para móviles -->
                <button class="navbar-toggler collapsed d-lg-none"
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#navbarCollapse"
                        aria-controls="navbarCollapse"
                        aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Menú principal (se convierte en dropdown en móviles) -->
                <div class="collapse navbar-collapse flex-grow-1" id="navbarCollapse">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item me-3">
                            @Html.ActionLink("Inicio", "Index", "Home", null, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item me-3">
                            @Html.ActionLink("Información de bonos", "Filtrado", "Filtrado", null, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Contactos", "Contactos", "Contactos", null, new { @class = "nav-link" })
                        </li>
                    </ul>
                </div>

                <!-- Tema oscuro/claro (siempre visible) -->
                <div class="mobile-position">
                    <nav class="navigation">
                        <div class="theme-switch-wrapper">
                            <label class="theme-switch" for="checkbox">
                                <input type="checkbox" id="checkbox">
                                <div class="mode-container">
                                    <i class="gg-sun"></i>
                                    <i class="gg-moon"></i>
                                </div>
                            </label>
                        </div>
                    </nav>
                </div>
            </nav>
        </div>
    </header>
    <!--//Header-->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="w3l-footer-29-main"></footer>

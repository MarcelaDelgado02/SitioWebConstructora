<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewData["Title"] - GrupoABASA</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Template CSS (style-starter) -->
    <link rel="stylesheet" href="~/assets/css/style-starter.css">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Hind+Siliguri:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
    <!-- Header modificado según template -->
    <header id="site-header" class="fixed-top">
        <div class="container">
            <nav class="navbar navbar-expand-lg navbar-light stroke py-lg-0">
                <h1>
                    <a class="navbar-brand pe-xl-5 pe-lg-4" href="/">
                        Grupo<span class="sublog">ABASA</span>
                    </a>
                </h1>
                <button class="navbar-toggler collapsed" type="button"
                        data-bs-toggle="collapse" data-bs-target="#navbarScroll"
                        aria-controls="navbarScroll" aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon fa icon-expand fa-bars"></span>
                    <span class="navbar-toggler-icon fa icon-close fa-times"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarScroll">
                    <ul class="navbar-nav me-lg-auto my-2 my-lg-0 navbar-nav-scroll">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="/">Inicio</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Filtrado">Información de bonos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Contactos">Contactos</a>
                        </li>
                    </ul>
                </div>

                <!-- Tema oscuro/claro -->
                <div class="mobile-position">
                    <div class="theme-switch-wrapper">
                        <label class="theme-switch" for="checkbox">
                            <input type="checkbox" id="checkbox">
                            <div class="mode-container">
                                <i class="gg-sun"></i>
                                <i class="gg-moon"></i>
                            </div>
                        </label>
                    </div>
                </div>
            </nav>
        </div>
    </header>

    <!-- Contenido principal -->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer (mantener tu estructura original) -->
    <footer class="w3l-footer-29-main">
        <!-- ... tu footer actual ... -->
    </footer>

    <!-- Scripts esenciales en orden correcto -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Scripts del template -->
    <script src="~/assets/js/theme-change.js"></script>
    <script>
        // Fixed header on scroll
        $(window).on("scroll", function() {
            var scroll = $(window).scrollTop();
            scroll >= 80
                ? $("#site-header").addClass("nav-fixed")
                : $("#site-header").removeClass("nav-fixed");
        });

        // Manejo del menú móvil
        $(".navbar-toggler").click(function() {
            $("header").toggleClass("active");
            $("body").toggleClass("noscroll");
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>